---
const events = [
  { label: '일본취업 진단', link: '/events/01-check-up' },
  { label: '자기분석 WS', link: '/events/02-self-analysis' },
  { label: 'ES작성 WS', link: '/events/03-es-workshop' },
  { label: '일본 취업 Class', link: '/events/04-japan-class' },
  { label: 'MeetUp', link: '/events/05-meetup' },
];
---
<!-- Google Tag Manager (noscript) -->
<noscript>
  <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5HRKZRKJ" height="0" width="0" style="display:none;visibility:hidden"></iframe>
</noscript>
<!-- End Google Tag Manager (noscript) -->

<nav class="top-nav">
  {events.map(event => (
    <a href={event.link} aria-label={`Go to ${event.label} page`} class="nav-link">{event.label}</a>
  ))}
</nav>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const utmSource = urlParams.get('utm_source') || '(not set)';
    const utmMedium = urlParams.get('utm_medium') || '(not set)';
    const utmCampaign = urlParams.get('utm_campaign') || '(not set)';
    const queryString = utmSource !== '(not set)' ? `?utm_source=${utmSource}&utm_medium=${utmMedium}&utm_campaign=${utmCampaign}` : '';
    document.querySelectorAll('.nav-link').forEach(link => {
      if (!link.href.includes('?')) link.href += queryString;
    });
  });
</script>

<style>
  .top-nav {
    display: flex;
    justify-content: center;
    gap: 1rem;
    padding: 1rem;
    background-color: var(--sl-color-gray-9);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  .top-nav a {
    color: var(--sl-color-gray-3);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
  }
  .top-nav a:hover {
    color: var(--sl-color-white);
    background-color: var(--sl-color-gray-7);
  }
</style>